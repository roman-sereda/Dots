  console.log('turn')
  console.log( turn )
  console.log('player')
  console.log( <%= player %>)
  if( turn == <%= player %>){
    var point = field.getContext('2d');
    if(( x / 20 - ~~( x / 20 )) > 0.5){
      x = ~~(x / 20 + 1)
    }else{
      x = ~~(x / 20)
    };

    if(( y / 20 - ~~( y / 20 )) > 0.5){
      y = ~~(y / 20 + 1)
    }else{
      y = ~~(y / 20)
    };

    $.ajax({
      url: "/new_point",
      type: "POST",
      data: { id: <%= field_id %>, x: x, y: y },
      success: function(resp){ }
    });

    checkForZones()
  }else{
    alert('not your turn')
  }

}

