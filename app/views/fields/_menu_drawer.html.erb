<script>

$(document).ready(function(){

  $('#all-games').show()
  $('#avaliable-games').hide()
  $('#my-games').hide()

})

function showAll(){
  $('#all-games').show()
  $('#avaliable-games').hide()
  $('#my-games').hide()

  toggleActiveClass('.all')
}

function showAvaliable(){
  $('#all-games').hide()
  $('#avaliable-games').show()
  $('#my-games').hide()

  toggleActiveClass('.avaliable')
}

function showMy(){
  $('#all-games').hide()
  $('#avaliable-games').hide()
  $('#my-games').show()

  toggleActiveClass('.my')
}

function toggleActiveClass( className ){
  $('.all').removeClass('active')
  $('.avaliable').removeClass('active')
  $('.my').removeClass('active')

  $(className).addClass( 'active' )
}

</script>
